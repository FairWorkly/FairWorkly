# ============================================
# FairWorkly Agent Service Configuration
# ============================================
# Copy this file to .env and fill in your values

# --------------------------------------------
# OpenAI API Settings (for Roster Agent)
# --------------------------------------------
# Your OpenAI API key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-key

# API base URL (change for Azure OpenAI or other providers)
OPENAI_API_BASE=https://api.openai.com/v1

# Model to use (gpt-4o, gpt-4o-mini, gpt-4-turbo, etc.)
OPENAI_MODEL=gpt-4o-mini

# Temperature for response generation (0.0-2.0, lower = more deterministic)
OPENAI_TEMPERATURE=0.4

# --------------------------------------------
# Anthropic API Settings (for Payroll Agent)
# --------------------------------------------
# Your Anthropic API key (get from https://console.anthropic.com/settings/keys)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Model to use (claude-sonnet-4-20250514, claude-3-5-haiku-20241022, etc.)
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# --------------------------------------------
# LLM Provider Selection (Optional)
# --------------------------------------------
# Default provider: openai, anthropic, local
# Each agent can override this in config.yaml
LLM_PROVIDER=openai

# --------------------------------------------
# Service Settings (Optional)
# --------------------------------------------
# Server host and port
HOST=0.0.0.0
PORT=8000

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
